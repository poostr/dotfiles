# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# swap windows
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - l : yabai -m window --swap east

# increase window size
shift + alt - h : yabai -m window --resize left:-20:0 ; yabai -m window --resize right:-20:0
shift + alt - j : yabai -m window --resize bottom:0:20 ; yabai -m window --resize top:0:20
shift + alt - k : yabai -m window --resize top:0:-20 ; yabai -m window --resize bottom:0:-20
shift + alt - l : yabai -m window --resize right:20:0 ; yabai -m window --resize left:20:0

#change focus between external displays 
ctrl + shift + alt - h: yabai -m display --focus west
ctrl + shift + alt - j: yabai -m display --focus south
ctrl + shift + alt - l: yabai -m display --focus east
ctrl + shift + alt - k: yabai -m display --focus north

# move window to display left and right
# shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
# shift + alt - s : yabai -m window --display south; yabai -m display --focus south;
# shift + alt - g : yabai -m window --display east; yabai -m display --focus east;
# shift + alt - g : yabai -m window --display north; yabai -m display --focus north;

# rotate layout 
shift + alt - r : yabai -m space --rotate 90

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# toggle window split type
alt - e : yabai -m window --toggle split

# # move window and split
# ctrl + alt - j : yabai -m window --warp south
# ctrl + alt - k : yabai -m window --warp north
# ctrl + alt - h : yabai -m window --warp west
# ctrl + alt - l : yabai -m window --warp east

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;  yabai -m display --focus prev
shift + alt - n : yabai -m window --space next; yabai -m display --focus next

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;
shift + alt - 8 : yabai -m window --space 8;
shift + alt - 9 : yabai -m window --space 9;

# fast focus desktop
shift + alt - tab : yabai -m space --focus recent

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

